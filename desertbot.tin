#alias {clearHealthCheck}
{
	#undelay {healthCheck}
}

#alias {healthcheck}
{
	#delay {healthCheck}
	{
		#var health 1;
		toggle on;
	}
	{30}
}

#ticker {characterStatus}
{
    #if {$bot == 1}
    {
        #if {$health == 1 && $currentHp < $hpThreshold}
        {
            #var health 0;
            toggle off;
            healthcheck;
        }
        {
            #if {$health == 0 && $currentHp > $hpThreshold}
            {
                #var health 1;
                clearHealthCheck;
                toggle on;
            }
        }
    }
}
{1}

#action {Impale who?}
{
	#var fighting 0;
	look;
}

#alias {walkToDesert}
{
	5n12ese7n;
}

#alias {toggle}
{
	#if {"%1" == ""}
	{
		#showme Bot On or Off?
	}
	{
		#if {"%1" == "on"}
		{
            #if {$currentHp > 999}
            {
                #show toggling on;
                #var bot 1;
                #var operating 1;
                look;
            }
            {
                healthcheck;
            }
		}
		#if {"%1" == "off"}
		{
            #show toggling off;
			#var bot 0;
			#var operating 0;
		}
	}
}

#action {Exits}
{
	#var look 1;
}

#alias {resetLook}
{
	#var look 0;
}

#ticker {moveForward}
{
	#if {$look == 1 && $fighting == 0 && $bot == 1 && $operating == 1 && $currentHp > $hpThreshold}
	{
		walkForward;
	}
}
{5}

#alias {walkForward}
{
	#path walk foward;
}

