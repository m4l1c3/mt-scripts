#action {END OF PATH}
{	
	#if {$direction == 0 && $bot == 1}
	{
		toggle off;
		#var direction 1;
		#path load reverseDesertPath;
		toggle on;
	}
	{
		#if {$direction == 1 && $bot == 1}
		{
			toggle off;
			#var direction 0;
			#path load desertPath;
			toggle on
		}
	}
